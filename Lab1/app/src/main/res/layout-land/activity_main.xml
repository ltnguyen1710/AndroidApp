<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="142dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blue"
            android:layout_width="738dp"
            android:layout_height="76dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/blue"></TextView>

        <TextView
            android:id="@+id/red"
            android:layout_width="815dp"
            android:layout_height="55dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/red"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="841dp"
        android:layout_height="149dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="176dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/green"
            android:layout_width="205dp"
            android:layout_height="120dp"
            android:background="@color/green"></TextView>

        <TextView
            android:id="@+id/purple"
            android:layout_width="265dp"
            android:layout_height="102dp"
            android:background="@color/purple"></TextView>

        <TextView
            android:id="@+id/yellow"
            android:layout_width="247dp"
            android:layout_height="113dp"
            android:background="@color/yellow"></TextView>

    </LinearLayout>

    <SeekBar
        android:id="@+id/see1"
        android:layout_width="851dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="8dp"
        android:progress="3"></SeekBar>

</RelativeLayout>